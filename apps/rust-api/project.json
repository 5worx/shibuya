{
  "name": "rust-api",
  "implicitDependencies": ["kpn-mailpit", "kpn-keycloak", "kpn-database"],
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/rust-api",
        "commands": ["cargo fetch"]
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sqlx migrate run",
        "cwd": "apps/rust-api"
      }
    },
    "seed:dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["cargo run --bin seeder -- seeds/persons.dev.json"],
        "parallel": false,
        "cwd": "apps/rust-api"
      }
    },
    "seed:test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run --bin seeder -- seeds/persons.test.json",
        "cwd": "apps/rust-api"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": ["migrate", "seed:dev"],
      "options": {
        "command": ". $HOME/.cargo/env && cargo watch -x \"run --bin rust-api\"",
        "cwd": "apps/rust-api"
      }
    }
  },
  "tags": ["type:app", "layer:backend", "tech:rust"]
}
