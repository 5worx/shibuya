{
  "name": "kpn-keycloak",
  "projectType": "library",
  "targets": {
    "forge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -p kpn-keycloak up -d keycloak-db keycloak-admin",
        "cwd": "infrastructure/keycloak"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -p kpn-keycloak start",
        "cwd": "infrastructure/keycloak"
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infrastructure/keycloak",
        "commands": ["docker compose -p kpn-keycloak stop"],
        "parallel": false
      }
    },
    "melt": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infrastructure/keycloak",
        "commands": ["docker compose -p kpn-keycloak -v down"],
        "parallel": false
      }
    },
    "export-realm": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "./",
        "commands": [
          "node ./shibuya/export-keycloak-realm.mjs --container-name=kpn-keycloak-admin --realm=FADS --target-path=./infrastructure/keycloak/import/realm-export.json"
        ],
        "parallel": false
      }
    }
  }
}
