{
  "name": "shibuya-keycloak",
  "projectType": "library",
  "targets": {
    "forge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -p shibuya-keycloak up -d keycloak-db keycloak-admin",
        "cwd": "infrastructure/keycloak"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -p shibuya-keycloak start",
        "cwd": "infrastructure/keycloak"
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["docker compose -p shibuya-keycloak stop"],
        "parallel": false
      }
    },
    "melt": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker compose -p shibuya-keycloak -v down",
          "docker run --rm -v \"$PWD:/app\" alpine rm -rf /app/{projectRoot}/data"
        ],
        "parallel": false
      }
    }
  }
}
