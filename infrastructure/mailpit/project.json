{
  "name": "kpn-mailpit",
  "projectType": "library",
  "targets": {
    "forge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -p kpn-mailpit up -d",
        "cwd": "infrastructure/mailpit"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -p kpn-mailpit start",
        "cwd": "infrastructure/mailpit"
      }
    },
    "stop": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infrastructure/mailpit",
        "commands": ["docker compose -p kpn-mailpit stop"]
      }
    },
    "melt": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infrastructure/mailpit",
        "commands": ["docker compose -p kpn-mailpit -v down"],
        "parallel": false
      }
    }
  }
}
